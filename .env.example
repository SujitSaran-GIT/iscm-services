# ============================================
# ISCM SERVICES ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================
# IAM Service Database
DB_URL=jdbc:postgresql://localhost:5432/iscm_iam
DB_USERNAME=postgres
DB_PASSWORD=Saran@2002

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ============================================
# JWT SECURITY SECRETS
# ============================================
# Generate these using: openssl rand -base64 32
JWT_SECRET=your_jwt_access_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_minimum_32_characters

# ============================================
# OAUTH CONFIGURATION
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8081/iam/api/v1/oauth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:8081/iam/api/v1/oauth/microsoft/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8081/iam/api/v1/oauth/linkedin/callback

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# ============================================
# SERVICE URLS
# ============================================
IAM_SERVICE_URL=http://localhost:8081
FRAUD_SERVICE_URL=http://localhost:8082

# ============================================
# SPRING PROFILES
# ============================================
# Use: dev, test, prod
SPRING_PROFILES_ACTIVE=dev